<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ArqVision Arquitetura</title>
    <link rel="icon" type="image/svg+xml" href="~/media/app/favicon.svg" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header">
        <div class="container">
            <nav class="nav">
                <a href="/" class="logo">
                    <object type="image/svg+xml" data="~/media/app/arqvision-logo.svg" class="logo-svg"></object>
                </a>
                <ul class="nav-menu">
                    <li><a href="#inicio">Início</a></li>
                    <li><a href="#sobre">Sobre Nós</a></li>
                    <li><a href="#processo">Processo</a></li>
                    <li><a href="#projetos">Projetos</a></li>
                    <li><a href="#andamento">Em Andamento</a></li>
                    <li><a href="#contato">Contato</a></li>
                </ul>
                <div class="nav-actions">
                    <a href="https://wa.me/558899384366?text=Olá!%20Vim%20pelo%20site%20e%20tenho%20interesse%20em%20fazer%20um%20projeto%20arquitetônico.%20Podemos%20conversar?" 
                       target="_blank" 
                       class="btn btn-primary">
                        Orçamento
                    </a>
                </div>
            </nav>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <div class="footer-grid">
                <div class="footer-section">
                    <h3 class="footer-title"><object type="image/svg+xml" data="~/media/app/arqvision-logo.svg" class="logo-svg"></object></h3>
                    <p class="footer-text">Transformamos espaços através de projetos arquitetônicos inovadores, funcionais e sustentáveis.</p>
                </div>
                <div class="footer-section">
                    <h4 class="footer-heading">Empresa</h4>
                    <ul class="footer-links">
                        <li><a href="#sobre">Sobre Nós</a></li>
                        <li><a href="#carreiras">Carreiras</a></li>
                        <li><a href="#blog">Blog</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4 class="footer-heading">Serviços</h4>
                    <ul class="footer-links">
                        <li><a href="#projetos">Arquitetura Residencial</a></li>
                        <li><a href="#projetos">Arquitetura Comercial</a></li>
                        <li><a href="#projetos">Design de Interiores</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4 class="footer-heading">Contato</h4>
                    <ul class="footer-links">
                        <li>evilasiojunior.arq@gmail.com</li>
                        <li>(88) 9938-4366</li>
                        <li>Rua Pontes Neto, Cabimbas, 2381</li>
                        <li>Itapipoca - CE</li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; @DateTime.Now.Year ArqVision. Todos os direitos reservados.</p>
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>